{
  "manifest_version": 3,
  "name": "Report Scraper",
  "version": "1.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "{f1caee1b-f528-428c-858b-ab982bb276a2}"
    }
  },
  "description": "Scrapes a summary of introduced HackerOne reports including their status, last action, and last message",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://hackerone.com/*"
  ],
  "icons": {
    "48": "icons/icon_48.png",
    "96": "icons/icon_96.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://hackerone.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "results.html",
        "results.js",
        "theme.css"
      ],
      "matches": [
        "https://hackerone.com/*"
      ]
    }
  ]
}
