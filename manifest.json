{
  "manifest_version": 3,
  "name": "Report Scraper",
  "version": "1.3.1",
  "description": "Scrapes a summary of introduced HackerOne reports including their status, last action, and last message",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://hackerone.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://hackerone.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "results.html",
        "results.js",
        "theme.css"
      ],
      "matches": [
        "https://hackerone.com/*"
      ]
    }
  ]
}
